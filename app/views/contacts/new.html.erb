<div id="primary-content">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3>Send me a message</h3>
    </div>

    <div class="panel-body">
      <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>

        <div class="form-group">
          <%= f.label :name, :required => true %><i id="form-contact">Your Name</i>
          <%= f.text_field :name, autofocus: true, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :email, :required => true %><i>Your Contact email</i>
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :message, :as => :text, :required => true %><i>Job offer Description | or anything else</i>
          <%= f.text_area :message, autofocus: true, class: "form-control" %>
        </div>

        <div class= "hidden">
          <%= f.input :nickname, :hint => 'Leave this field blank!' %>
        </div>

        <div class="form-group">
          <%= f.submit "Send message", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
    <div class="panel-footer">
      <h5>Complete all fields above and click Send message.</h5>
    </div> 
  </div>
</div>